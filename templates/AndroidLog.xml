<templateSet group="AndroidLog">
  <template name="logc-kotlin" value="nvest.com.nvestlibrary.commonMethod.CommonMethod.log(TAG,&quot;$message$&quot;)" description="" toReformat="false" toShortenFQNames="true">
    <variable name="message" expression="" defaultValue="" alwaysStopAt="true" />
    <context>
      <option name="KOTLIN" value="true" />
    </context>
  </template>
  <template name="logc" value="nvest.com.nvestlibrary.commonMethod.CommonMethod.log(TAG,&quot;$message$&quot;);" description="" toReformat="false" toShortenFQNames="true">
    <variable name="message" expression="" defaultValue="" alwaysStopAt="true" />
    <context>
      <option name="JAVA_CODE" value="true" />
    </context>
  </template>
  <template name="method-name" value="String methodName = &quot;$METHOD_NAME$&quot;;" description="Method name variable" toReformat="true" toShortenFQNames="true">
    <variable name="METHOD_NAME" expression="methodName()" defaultValue="" alwaysStopAt="true" />
    <context>
      <option name="JAVA_STATEMENT" value="true" />
    </context>
  </template>
  <template name="logt" value="private static final String TAG = $className$.class.getSimpleName();" description="A static logtag with your current classname" toReformat="true" toShortenFQNames="true">
    <variable name="className" expression="groovyScript(&quot;_1.take(Math.min(23, _1.length()));&quot;, className())" defaultValue="" alwaysStopAt="true" />
    <context />
  </template>
</templateSet>